<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#00000000"/>
            <stroke
                android:width="2dp"
            android:color="#808080"
            />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#70c2c2c2" />
            <stroke
                android:width="2dp"
            android:color="#808080"
            />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
