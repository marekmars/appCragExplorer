<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <solid android:color="#70c2c2c2"/> <!-- Cambia el color de fondo al presionar -->
            <corners android:bottomLeftRadius="20dp" /> <!-- Cambia el radio de las esquinas (opcional) -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00000000" /> <!-- Fondo transparente cuando no se presiona -->
            <corners android:bottomLeftRadius="20dp" /> <!-- Cambia el radio de las esquinas (opcional) -->
        </shape>
    </item>
</selector>